<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f4f4f4;
      }
      .btn-delete {
        color: white;
        background-color: red;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
      }
      .pagination {
        margin: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .pagination a {
        text-decoration: none;
        color: blue;
        margin: 0 5px;
      }
      .pagination span {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Admin Panel</h1>

    <!-- Users Section -->
    <h2>Users</h2>
    <table>
      <thead>
        <tr>
          <th>Profile Picture</th>
          <th>Username</th>
          <th>Bio</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td>
            <% if (user.profilePicture) { %>
            <img
              src="<%= user.profilePicture %>"
              alt="Profile Picture"
              width="50"
              height="50"
            />
            <% } else { %> No Picture <% } %>
          </td>
          <td><%= user.username %></td>
          <td><%= user.bio || 'No bio' %></td>
          <td><%= user.email %></td>
          <td>
            <form
              action="/admin/delete-user"
              method="POST"
              style="display: inline"
            >
              <input type="hidden" name="userId" value="<%= user.id %>" />
              <input
                type="password"
                name="adminPassword"
                placeholder="Admin Password"
                required
                class="admin-password-input"
              />
              <button class="btn-delete" type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Messages Section -->
    <h2>Messages</h2>
    <table>
      <thead>
        <tr>
          <th>Sender</th>
          <th>Recipient</th>
          <th>Content</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% messages.forEach(message => { %>
        <tr>
          <td><%= message.sender.username %></td>
          <td><%= message.recipient ? message.recipient.username : 'N/A' %></td>
          <td><%= message.content %></td>
          <td><%= new Date(message.createdAt).toLocaleString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <div class="pagination">
      <% if (pagination.messagePage > 1) { %>
      <a href="?messagePage=<%= pagination.messagePage - 1 %>">Previous</a>
      <% } %>
      <span>Page <%= pagination.messagePage %></span>
      <% if (messages.length === pagination.itemsPerPage) { %>
      <a href="?messagePage=<%= pagination.messagePage + 1 %>">Next</a>
      <% } %>
    </div>

    <!-- Posts Section -->
    <h2>Latest Posts</h2>
    <table>
      <thead>
        <tr>
          <th>Author</th>
          <th>Content</th>
          <th>Likes</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach(post => { %>
        <tr>
          <td><%= post.author.username %></td>
          <td><%= post.content %></td>
          <td><%= post.likes.length %></td>
          <td><%= new Date(post.createdAt).toLocaleString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <div class="pagination">
      <% if (pagination.postPage > 1) { %>
      <a href="?postPage=<%= pagination.postPage - 1 %>">Previous</a>
      <% } %>
      <span>Page <%= pagination.postPage %></span>
      <% if (posts.length === pagination.itemsPerPage) { %>
      <a href="?postPage=<%= pagination.postPage + 1 %>">Next</a>
      <% } %>
    </div>

    <!-- Comments Section -->
    <h2>Latest Comments</h2>
    <table>
      <thead>
        <tr>
          <th>Author</th>
          <th>Post</th>
          <th>Content</th>
          <th>Likes</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% comments.forEach(comment => { %>
        <tr>
          <td><%= comment.author.username %></td>
          <td><%= comment.postContent %></td>
          <td><%= comment.content %></td>
          <td><%= comment.likes.length %></td>
          <td><%= new Date(comment.createdAt).toLocaleString() %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <div class="pagination">
      <% if (pagination.commentPage > 1) { %>
      <a href="?commentPage=<%= pagination.commentPage - 1 %>">Previous</a>
      <% } %>
      <span>Page <%= pagination.commentPage %></span>
      <% if (comments.length === pagination.itemsPerPage) { %>
      <a href="?commentPage=<%= pagination.commentPage + 1 %>">Next</a>
      <% } %>
    </div>
  </body>
</html>
